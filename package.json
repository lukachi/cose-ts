{
  "name": "@lukachi/cose-ts",
  "version": "0.1.0",
  "description": "Typescript COSE implementation",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "preview": "vite preview",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+#"
  },
  "keywords": [
    "COSE",
    "Signing",
    "MAC",
    "Encrypt",
    "IoT"
  ],
  "author": "lukachi",
  "license": "Apache-2.0",
  "dependencies": {
    "@noble/curves": "^1.9.4",
    "@noble/hashes": "^1.8.0",
    "cbor-x": "^1.6.0",
    "cbor2": "^2.0.1",
    "aes-cbc-mac": "^1.0.1",
    "any-promise": "^1.3.0",
    "cbor": "^8.1.0",
    "elliptic": "^6.4.0",
    "node-hkdf-sync": "^1.0.0",
    "node-rsa": "^1.1.1"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@types/cose-js": "^0.8.3",
    "@types/node": "^24.0.14",
    "jsdom": "^26.1.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0"
  }
}
