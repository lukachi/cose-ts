{
  "name": "@lukachi/cose-ts",
  "version": "0.1.2",
  "description": "Typescript COSE implementation",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "repository": {
    "type": "git+https://github.com/lukachi/cose-ts.git",
    "url": "git"
  },
  "bugs": {
    "url": "https://github.com/lukachi/cose-ts/issues"
  },
  "keywords": [
    "COSE",
    "Signing",
    "MAC",
    "Encrypt",
    "IoT"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "homepage": "https://github.com/lukachi/cose-ts#readme",
  "author": "lukachi <lukachisama@gmail.com> (https://github.com/lukachi)",
  "license": "MIT",
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "release": "release-it"
  },
  "dependencies": {
    "@noble/ciphers": "^1.3.0",
    "@noble/curves": "^1.9.4",
    "@noble/hashes": "^1.8.0",
    "aes-cbc-mac": "^1.0.1",
    "cbor": "^8.1.0",
    "cbor2": "^2.0.1",
    "jsrsasign": "^11.1.0"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@types/cose-js": "^0.8.3",
    "@types/jsrsasign": "^10.5.15",
    "@types/node": "^24.0.14",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "jsdom": "^26.1.0",
    "stream-browserify": "^3.0.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^3.2.4",
    "@release-it/conventional-changelog": "^9.0.2",
    "release-it": "^17.10.0"
  },
  "engines": {
    "node": ">=22.0"
  }
}
